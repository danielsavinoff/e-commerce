generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                             String        @id @default(cuid())
  name                           String 
  priceInTheSmallestDenomination Int
  slug                           String        @unique
  status                         String
  productShots                   ProductShot[]
}

model ProductShot {
  id                             String        @id @default(cuid())
  product                        Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId                      String
  pathname                       String
  position                       Int
}